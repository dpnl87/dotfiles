" color
colorscheme molokai
" display the current mode
set showmode
" a tab is 4 spaces
set tabstop=2
" autoindent is 4 spaces
set shiftwidth=2
" use Source Code Pro font
set anti enc=utf-8
set guifont=Source\ Code\ Pro\ for\ Powerline:h13
let g:airline_powerline_fonts=1
" set airline theme
AirlineTheme molokai
" enable spellcheck for .md files
autocmd BufRead,BufNewFile *.md setlocal spell
" Set 80 line color
set colorcolumn=80
